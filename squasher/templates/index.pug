html(lang="en")
  head
    title iSquasher
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href='https://code.getmdl.io/1.3.0/material.light_green-green.min.css')
    script(defer src='https://code.getmdl.io/1.3.0/material.min.js')
    meta(name='viewport' content='width=device-scale, initial-scale=1.0')
    style(type='text/css')
      include index.css
    script(type="text/javascript").
      window.onload = function() {
        document.getElementById("srcImageUploader").onchange = function () {
          document.getElementById("srcImageText").value = this.files[0].name;
        };
        document.getElementById("dstImageUploader").onchange = function () {
          document.getElementById("dstImageText").value = this.files[0].name;
        };
      };
  body
    div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
        div.mdl-layout__header-row
          span.mdl-layout-title Do you want to be squashed?
          div.mdl-layout-spacer
          nav.mdl-navigation.mdl-layout--large-screen-only
      div.mdl-layout__drawer
        span.mdl-layout-title Do you want to be squashed?
        nav.mdl-navigation
      main.mdl-layout__content
        div.page-content
          form(method='post', action='/squash', enctype="multipart/form-data")
            div.mdl-textfield.mdl-js-textfield.mdl-textfield--file
              input#srcImageText.mdl-textfield__input(type="text", readonly placeholder="Source Image")
              div.mdl-button.mdl-button--primary.mdl-button--icon.mdl-button--file
                i.material-icons attach_file
                input#srcImageUploader(type="file", name="src_image")
            div.mdl-textfield.mdl-js-textfield.mdl-textfield--file
              input#dstImageText.mdl-textfield__input(type="text", readonly placeholder="Destination Image")
              div.mdl-button.mdl-button--primary.mdl-button--icon.mdl-button--file
                i.material-icons attach_file
                input#dstImageUploader(type="file", name="dst_image")
            br
            input.mdl-button.mdl-js-button.mdl-button--raised(type='submit', value="Send")